<?xml version="1.0"?>
<config>
    <modules>
        <ForeverNew_MegaMenu>
            <version>1.0.0</version>
        </ForeverNew_MegaMenu>
    </modules>
    <global>
        <helpers>
            <forevernew_megamenu>
                <class>ForeverNew_MegaMenu_Helper</class>
            </forevernew_megamenu>
        </helpers>
        <blocks>
            <forevernew_megamenu>
                <class>ForeverNew_MegaMenu_Block</class>
            </forevernew_megamenu>
        </blocks>
        <models>
            <forevernew_megamenu>
                <class>ForeverNew_MegaMenu_Model</class>
                <resourceModel>forevernew_megamenu_mysql4</resourceModel>
            </forevernew_megamenu>
            <forevernew_megamenu_mysql4>
                <class>ForeverNew_MageMenu_Model_Mysql4</class>
                <entities>
                    <custommenu>
                        <table>forevernew_megamenu_custommenu</table>
                    </custommenu>
                </entities>
            </forevernew_megamenu_mysql4>
        </models>
        <resources>
            <forevernew_megamenu_setup>
                <setup>
                    <module>ForeverNew_MegaMenu</module>
                </setup>
            </forevernew_megamenu_setup>
        </resources>
