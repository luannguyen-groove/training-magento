                <forevernew_megamenu>
                    <file>forevernew_megamenu.xml</file>
                </forevernew_megamenu>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <ForeverNew_MegaMenu before="Mage_Adminhtml">ForeverNew_MegaMenu_Adminhtml</ForeverNew_MegaMenu>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
